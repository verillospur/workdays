    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "WATester",
            "program": "${workspaceFolder}\\src\\server\\webapp\\__tester.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "LOG_LEVEL": "verbose",
                "WEBAPP_PORT": "2427",
            },
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "WebApp",
            "program": "${workspaceFolder}\\src\\server\\webapp\\_launcher.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "LOG_LEVEL": "verbose",
                "WEBAPP_PORT": "2427",
            },
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Go!",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\app.js",
            "env": {
                "LOG_LEVEL": "verbose",
                "WEBAPP_PORT": "2427",
            },
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}