<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= page_title %></title>
    
    <%- include('inc/head'); %>
    
  </head>
  <body>
    
    <div>
      <h3><%= page_title %></h3>
    </div>
    

    <div class="border-bottom border-left border-right border-top rounded-lg pt-2">
    
    <div class="overflow-auto viewer container-fluid pt-2">

  <%
  const numColumns = 4;
  let col = 1;
  for (let i = 0; i < context.data.entries.length; i++) {
    let item = context.data.entries[i];
  %>
      <% if (col == 1) { %>
      <div class="row">
      <% } %>

        <div class="col-sm">
          
          <div class="border rounded mb-2 pl-1 pr-2 pb-1 workingday">
            <strong class="date"><a href="#"><%= item.date.toDateString() %></a></strong>
            <br/>
            <span class="routeNumber border-top"><%= item.dayObject.routeNumber %></span>
            <div class="border pl-1 debriefReport overflow-auto" 
             style="max-height: 50px;">
              <%- item.dayObject.debriefReport %>
            </div>
          </div>

        </div>

      
      <% 
      if (col == numColumns) { 
        col = 1;
      %>
      </div>
      <% } else { col++; } %>
  <%
  } 
  if (col != 1) {
    for (let i = 0; i < ((numColumns - col) +1) ; i++) {
      %>
      <div class="col-sm"></div>
      <%
    }
  }
  %>
    </div>

    
    </div>
    </div>

    <%- include('inc/footer'); %>

  </body>
</html>
